include "std.fire"

ciovec :
  buf     ptr
  buf_len int
end

fd_write import: int ptr int ptr -> ptr : end

puts : *str :
  iov ciovec:= end
  written: 4 end
  @ swap !iov
  1 *iov #ptr 1 written fd_write drop
end

print : str :
  buffer str:= end
  !buffer *buffer puts
end

println inline: str :
  print "\n" print
end

trim-left inline: *str :
  dup
  .*len  dec32
  .*data inc32
end
